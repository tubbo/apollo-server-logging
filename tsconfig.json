{
  "compilerOptions": {
    "target": "es2016",
    "module": "node16",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true
  },
  "include": ["**/*.ts"],
  "exclude": ["**/*.test.*", "**/*.spec.*", "dist/**/*", "__*__/**/*"],
  "typedocOptions": {
    "exclude": ["**/*.test.*"],
    "entryPoints": ["index.ts"]
  }
}
