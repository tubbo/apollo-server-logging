{
  "name": "apollo-server-logging",
  "version": "1.0.0",
  "license": "MIT",
  "packageManager": "yarn@3.2.3",
  "repository": "https://github.com/tubbo/apollo-server-logging.git",
  "dependencies": {
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "graphql": "^16",
    "pino": "^8"
  },
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@commitlint/cli": "^17.1.1",
    "@commitlint/config-conventional": "^17.1.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "@types/babel__core": "^7",
    "@types/babel__preset-env": "^7",
    "@types/eslint": "^8",
    "@types/node": "^18.7.13",
    "@types/prettier": "^2",
    "@types/uuid": "^8",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "apollo-server-plugin-base": "^3.6.2",
    "babel-jest": "^29.0.1",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.8.7",
    "husky": "^8.0.1",
    "jest": "^29.0.1",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "pino": "^8.4.2",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.2"
  },
  "exports": {
    "./": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "run-p 'build:*'",
    "build:dts": "tsc --declaration --emitDeclarationOnly --declarationMap --outDir dist/types",
    "build:esm": "tsc --module esnext --target esnext --outDir dist/esm",
    "build:cjs": "tsc --module commonjs --target es2016 --outDir dist/cjs",
    "types": "tsc --noEmit",
    "test": "jest",
    "lint": "eslint .",
    "style": "prettier --check .",
    "fmt": "prettier --write . && eslint . --fix"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "prettier",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [
      {
        "files": [
          "**/*.test.*"
        ],
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/recommended"
        ]
      }
    ]
  },
  "jest": {
    "extensionsToTreatAsEsm": [
      ".ts",
      ".tsx"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{md,json,yml,yaml,html,htm,css,graphql,gql}": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits"
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      [
        "@semantic-release/npm",
        {
          "tarballDir": "pkg"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ]
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": "pkg/*.tgz"
        }
      ]
    ]
  }
}
